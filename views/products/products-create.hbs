<div class = "container">
    <div class="row justify-content-center">
        <div class="col-md-6 blockcontainer">
            <h1>Create New Product</h1>
            <form action="/products/create"  method="POST">
                <div class="mb-3">
                    <label for="prodName" class="form-label">Product Name </label>
                    <input required type="text" class="form-control" id="prodName" name="prodName">
                </div>

                <div class="mb-3">
                    <label for="prodDesc" class="form-label">Description:</label>
                    <input type="text" class="form-control" id="prodDesc" name="prodDesc">
                </div>

                <div class="mb-3">
                    <label for="prodImage" class="form-label">Image:</label>
                    <input type="text" class="form-control" id="prodImage" name="prodImage">
                </div>

                <div class="mb-3">
                    <label for="prodPrice" class="form-label">Product Price</label>
                    <input type="Number" class="form-control" id="prodPrice" name="prodPrice">
                </div>

                <div class="mb-3">
                    <label for="prodStock" class="form-label">Product Stock</label>
                    <input type="Number" class="form-control" id="prodStock" name="prodStock">
                </div>

                <button type="submit" class="btn btn-dark">Create New Product</button>
                <a href="/" class="btn btn-dark">Go back</a>
            </form>
            <hr>
        </div>
    </div>
</div>